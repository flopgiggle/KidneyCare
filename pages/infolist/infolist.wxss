.list-group {
  width: 100%;
  
  justify-content:center;
  align-items:center;
  display:flex;
  flex-direction:column;
  margin-bottom: 50rpx;
  background-color: #efeff4;
}

.list-title{
  background-color: #efeff4;
  width: 100%;
  text-align:left;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  color: #999;
  margin-left: 20rpx;
}

.list-item{
  background-color: #ffffff;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  margin-bottom: 20rpx;
  align-items: center;
  color: #676767;

}

.text-info{
  color: #676767;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-weight: bold;
}

.text-type{
  color: #111111;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-weight: bold;
}

.text-time{
  color: #676767;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.list-item-info{
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.add-record{
  display: flex;
  flex-direction: row;
  
}

.record-button{
  height:80rpx;
  background: #4fc1e9;
  flex:1;
  display: flex;
  align-items:center;
  justify-content:center;

  
}

.record-button text{
  color:#ffffff;
  font-size: 35rpx;
  font-weight: bold;
}

.left-button{
  border-style:solid;
	border-width:0 2px 0px 0px;
  border-color: #3cb0db;
}