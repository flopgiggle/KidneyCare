/* pages/dialogue/dialogue.wxss */
.my-message-group {
    display:flex;
    flex-direction:row;
    justify-content:flex-end;
    width:100%;
    align-items:flex-start;
    margin:10rpx 0 10rpx 0;
}

.my-message {
    flex: 8;
    margin-left: 40rpx;
    border: solid 1px #c1c1c1;
    padding: 20rpx;
    background-color: #d3f39c;
    border-radius:5px;
}

.my-icon {
    flex: 2
}

.other-message-group {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    width: 100%;
    margin: 10rpx 0 10rpx 0;
}

.other-message {
    flex: 8;
    margin-right: 40rpx;
    border: solid 1px #c1c1c1;
    padding: 20rpx;
    background-color: #f5f5f5;
    border-radius: 5px;
}

.other-icon {
    flex: 2
}

.avatar {
    width: 120rpx;
    height: 120rpx;
}

.message-area {
    display: flex;
    flex-direction: column;
    padding-bottom: 100rpx;
}

.message-scroll-area {
    flex: 1;
}

.post-area {
    width: 96%;
    height: 80rpx;
    padding: 2%;
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    align-items:center;
    
    background-color: #efeff4;
    position:fixed;
    bottom:-1rpx;
    right:-1rpx;
}

.post-area input{
    flex:8;
}

.dialogue-send {
    flex: 2;
    background-color: #4fc1e9;
    border-radius: 5px;
    text-align: center;
    vertical-align: central;
    height: 60rpx;
    justify-content: center;
    align-items: center;
    display:flex;
    color:white;
}
.diaogue-time-lable {
    background-color: #d5d5d5;
    color: white;
    font-size: 25rpx;
    width: 30%;
    padding: 10rpx;
    text-align: center;
    align-self: center;
    display: flex;
}
.dialogue-input {
    border-bottom: 1px solid #4fc1e9;
    margin-right:20rpx;
}